<h1 class="text-center">Create a new Flat</h1>
<%= simple_form_for(@flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :category %>
  <%= f.input :price %>
  <%= f.input :capacity %>
  <%= f.input :address %>
  <%= f.input :post_code %>
  <%= f.input :city %>
  <%= f.association :features, as: :check_boxes %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
