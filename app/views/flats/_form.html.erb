<h1 class="text-center">Create a new Flat</h1>
<%= simple_form_for(@flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :description, :input_html => {:rows => 10} %>
  <%= f.input :category %>
  <%= f.input :price %>
  <%= f.input :capacity %>
  <%= f.input :address %>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <%= f.input :post_code %>
    </div>
    <div class="col-xs-12 col-md-6">
      <%= f.input :city %>
    </div>

</div>
  <%= f.association :features, as: :check_boxes %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit 'Save & Quit',class: 'btn btn-primary', id: 'btn-create-flat' %>
<% end %>
